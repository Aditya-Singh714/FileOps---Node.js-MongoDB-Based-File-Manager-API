<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Notes</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-zinc-900 text-white">
  <div class="w-full min-h-screen p-10">
    <!-- Form Section -->
    <div class="bg-zinc-800 p-6 rounded-lg border border-zinc-700 shadow-md max-w-xl mx-auto mb-10">
      <form action="/create" method="post">
        <input class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-700 text-zinc-200 placeholder-zinc-400"
          type="text" name="title" placeholder="Title" required>

        <textarea
          class="block w-full rounded-md outline-none px-5 py-2 mt-3 bg-zinc-700 text-zinc-200 placeholder-zinc-400 resize-none"
          placeholder="Enter your task details" name="content" rows="4" required></textarea>

        <input class="mt-4 bg-blue-600 hover:bg-blue-700 transition px-5 py-2 rounded-md text-white cursor-pointer"
          type="submit" value="Create Task">
      </form>
    </div>

    <!-- Tasks Section -->
    <div class="tasks flex flex-wrap gap-6 justify-center">
      <% if (files.length> 0) { %>
        <% files.forEach(function(val) { %>
          <div class="task w-72 px-4 py-5 bg-zinc-800 border border-zinc-700 rounded-lg shadow-sm">
            <h1 class="text-zinc-100 text-xl font-semibold truncate">
              <%= val %>
            </h1>
            <div class="flex w-full justify-between items-center mt-3">
              <a class="text-blue-400 hover:underline inline-block" href="/files/<%= val %>">Read more..</a>
              <a class="text-green-400 hover:underline inline-block" href="/edit/<%= val %>">Edit File</a>
            </div>

          </div>
          <% }); %>
            <% } else { %>
              <h3 class="text-zinc-500 text-center w-full">No tasks yet</h3>
              <% } %>
    </div>
  </div>
</body>

</html>